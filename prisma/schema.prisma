// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth tables
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Media files tracking
model MediaFile {
  id          String   @id @default(cuid())
  url         String   @db.Text
  blobId      String?  // Vercel Blob ID
  filename    String
  mimeType    String
  size        Int
  width       Int?
  height      Int?
  status      String   @default("staging") // staging, active, orphaned
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // References from content
  blogPostsAsImage     BlogPost[]      @relation("BlogPostImage")
  galleryAlbumsAsCover  GalleryAlbum[]  @relation("GalleryAlbumCover")
  galleryImagesAsImage  GalleryImage[]  @relation("GalleryImageFile")
  servicesAsImage       Service[]       @relation("ServiceImage")
  testimonialsAsAvatar  Testimonial[]    @relation("TestimonialAvatar")

  @@index([status])
  @@index([createdAt])
}

// Blog posts
model BlogPost {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  excerpt     String     @db.Text
  content     String     @db.Text // HTML content from TipTap
  imageId     String?
  image       MediaFile? @relation("BlogPostImage", fields: [imageId], references: [id])
  featured    Boolean    @default(false)
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
  @@index([publishedAt])
  @@index([featured])
}

// Gallery
model GalleryAlbum {
  id          String        @id @default(cuid())
  title       String
  coverImageId String?
  coverImage  MediaFile?    @relation("GalleryAlbumCover", fields: [coverImageId], references: [id])
  images      GalleryImage[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([title])
}

model GalleryImage {
  id          String       @id @default(cuid())
  albumId     String
  album       GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
  imageId     String
  image       MediaFile    @relation("GalleryImageFile", fields: [imageId], references: [id])
  order       Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([albumId])
  @@index([order])
}

// Services
model Service {
  id          String   @id @default(cuid())
  title       String
  number      String
  description String   @db.Text
  imageId     String?
  image       MediaFile? @relation("ServiceImage", fields: [imageId], references: [id])
  features    String[] // Array of feature strings
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}

// Testimonials
model Testimonial {
  id          String     @id @default(cuid())
  quote       String     @db.Text
  name        String
  role        String
  avatarId    String?
  avatar      MediaFile? @relation("TestimonialAvatar", fields: [avatarId], references: [id])
  rating      Int        @default(5) // 1-5
  order       Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([order])
}

// FAQ
model FAQ {
  id          String   @id @default(cuid())
  question    String   @db.Text
  answer      String   @db.Text // HTML content from TipTap
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}
